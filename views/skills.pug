        style. 
            .content-skill {
                margin-top: 3rem;
                font-size: 2rem;
            }
            .skill-bar {
                position: relative;
                background: #f0f0f0;
                border-radius: 25px;
                margin: 1rem 0;
                padding: 5px;
                width: 100%;
            }
            .skill-bar-inner {
                display: block;
                height: 25px;
                border-radius: 20px;
                background: #007bff;
                text-align: center;
                color: #fff;
                line-height: 25px;
                font-weight: bold;
                animation: loadSkill 2s ease-in-out;
            }
            @keyframes loadSkill {
                0% { width: 0%; }
                100% { width: 100%; }
            }
