style.
  .sidebar {
    position: fixed;
    top: 0;
    left: 0;
    height: 100vh;
    width: 25%;
    background-color: black;
    color: white;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 20px;
  }

  .sidebar img {
    width: 5rem;
    height: 5rem;
    border-radius: 50%;
  }

  .logo-container {
    width: 100%;
    display: flex;
  }

  .logo-container img {
    margin-left: 1.5rem;
    transition: transform 0.3s ease;
  }

  .logo-container img:hover {
    transform: scale(1.2);
  }

  .sidebar .list-group-item {
    background-color: black;
    color: white;
    border: none;
    width: 100%;
    margin-bottom: 2rem;
    list-style-type: none;
  }

  .sidebar .list-group-item a {
    color: white;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .sidebar .list-group-item a:hover {
    color: #f8c471;
  }

  .content {
    margin-left: 25%;
    width: 75%;
    padding: 20px;
  }

  @media (max-width: 768px) {
    .sidebar {
      position: relative;
      width: 100%;
      height: auto;
      flex-direction: column;
      justify-content: center;
      padding: 10px;
    }

    .content {
      margin-left: 0;
      width: 100%;
    }

    .logo-container img {
      margin-left: 0.5rem;
    }

    .sidebar img {
      width: 4rem;
      height: 4rem;
    }

    .navbar-toggler {
      display: block;
      margin-bottom: 1rem;
    }

    .sidebar {
      display: none;
    }

    .sidebar.show {
      display: block ;
    }
  }

script.
  document.addEventListener('DOMContentLoaded', function () {
    const toggleButton = document.querySelector('.navbar-toggler'); // Match the corrected class in HTML
    const sidebar = document.getElementById('sidebarContent');
    const closeButton = document.querySelector('.close-btn');

    if (toggleButton && sidebar && closeButton) {
      // Toggle the sidebar on click
      toggleButton.addEventListener('click', function () {
        sidebar.classList.toggle('show');
      });

      // Close the sidebar on close button click
      closeButton.addEventListener('click', function () {
        sidebar.classList.remove('show');
      });
    }
  });



