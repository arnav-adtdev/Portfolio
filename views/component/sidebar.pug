    style.
      body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
      }

      .container-fluid {
        display: flex;
      }

      .sidebar {
        position: fixed;
        top: 0;
        left: 0;
        height: 100vh;
        width: 25%;
        background-color: black;
        color: white;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding: 20px;
        z-index: 1000;
        transition: left 0.3s ease;
      }

      .navbar-toggler-icon {
        display: none;
      }

      .close-btn {
        display: none;
        align-self: flex-end;
        background-color: white;
        color: black;
        border: none;
        border-radius: 50%;
        font-size: 1.2rem;
        width: 30px;
        height: 30px;
        cursor: pointer;
      }

      .sidebar img {
        width: 5rem;
        height: 5rem;
        border-radius: 50%;
      }

      .logo-container {
        display: flex;
        gap: 10px;
      }

      .logo-container img {
        width: 35px;
        height: 35px;
        transition: transform 0.3s ease;
      }

      .logo-container img:hover {
        transform: scale(1.2);
      }

      .sidebar .list-group-item {
        background-color: black;
        color: white;
        border: none;
        width: 100%;
        list-style-type: none;
        padding: 10px 0;
      }

      .sidebar .list-group-item a {
        color: white;
        text-decoration: none;
        transition: color 0.3s ease;
      }

      .sidebar .list-group-item a:hover {
        color: #f8c471;
      }

      .content {
        margin-left: 18%;
        width: 82%;
        padding: 20px;
      }

      @media (max-width: 768px) {
        .navbar-toggler-icon {
          display: block;
          background-color: white;
          padding: 10px;
          border-radius: 5px;
          cursor: pointer;
        }

        .sidebar {
          left: -100%;
          width: 80%;
        }

        .sidebar.show {
          left: 0;
        }

        .close-btn {
          display: block;
        }

        .content {
          margin-left: 0;
          width: 100%;
        }
      }

