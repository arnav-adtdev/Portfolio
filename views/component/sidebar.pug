style.
  .sidebar {
    position: fixed;
    top: 0;
    left: 0;
    height: 100vh;
    width: 18%; /* Adjust to 33.33% if you prefer */
    background-color: black;
    color: white;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 20px;
  }

  .sidebar img {
    width: 5rem;
    height: 5rem;
    border-radius: 50%;
  }

  .logo-container {
    width: 100%; /* Ensure full width for proper alignment */
    display: flex;
  }

  .logo-container img {
    margin-left: 1.5rem; /* Add gap between logos */
    transition: transform 0.3s ease; /* Smooth transition for hover effect */
  }

  .logo-container img:hover {
    transform: scale(1.2); /* Scale up the image on hover */
  }

  .sidebar .list-group-item {
    background-color: black;
    color: white;
    border: none;
    width: 100%;
    margin-bottom: 3rem; /* Add a gap between the list items */
    list-style-type: none;
  }

  .sidebar .list-group-item a {
    color: white;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .sidebar .list-group-item a:hover {
    color: #f8c471;
  }

  .content {
    margin-left: 25%; /* Adjust to 33.33% if you prefer */
    width: 75%; /* Adjust to 66.66% if you prefer */
    padding: 20px;
  }

  /* Media query for mobile responsiveness */
  @media (max-width: 768px) {
    .sidebar {
      position: relative;
      width: 100%;
      height: auto;
      flex-direction: column; /* Change back to column for better mobile layout */
      justify-content: center;
      padding: 10px;
    }

    .content {
      margin-left: 0;
      width: 100%;
    }

    .logo-container img {
      margin-left: 0.5rem; /* Adjust gap between logos for mobile */
    }

    .sidebar img {
      width: 4rem; /* Adjust size for mobile */
      height: 4rem; /* Adjust size for mobile */
    }

    .navbar-toggler {
      display: block; /* Show toggle button on mobile */
      margin-bottom: 1rem; /* Add space below toggle button */
    }

    .sidebar {
      display: none; /* Hide sidebar on mobile initially */
    }

    .sidebar.show {
      display: flex; /* Show sidebar when toggled */
    }
  }
