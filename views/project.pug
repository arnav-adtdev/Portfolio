                    a.btn.btn-primary(href="#") View Project

 

    style. 
      /* General styling for mobile */
      .content-project {
          margin-top: 3rem;
          font-size: 2rem;
      }

      /* Project card styles */
      .project-card {
          perspective: 1000px; /* 3D flip effect */
          animation: moveInRight 1s forwards; /* Entry animation */
          opacity: 0; /* Initial state for fade-in */
      }

      .project-card-inner {
          position: relative;
          width: 100%;
          height: 100%;
          transform-style: preserve-3d;
          transition: transform 0.6s;
      }

      .project-card:hover .project-card-inner {
          transform: rotateY(180deg);
      }

      /* Front and back of project cards */
      .project-card-front, .project-card-back {
          position: absolute;
          width: 100%;
          backface-visibility: hidden;
      }

      .project-card-front {
          z-index: 2;
      }

      .project-card-back {
          transform: rotateY(180deg);
          background: #fff; 
          padding: 20px;
      }

      /* Image adjustments */
      .img-fluid {
          max-width: 100%;
          height: auto;
      }

      /* Entry animation */
      @keyframes moveInRight {
          0% {
              transform: translateX(100%);
              opacity: 0;
          }
          100% {
              transform: translateX(0);
              opacity: 1;
          }
      }

      /* **Mobile View Enhancements with Media Queries** */
      @media (max-width: 768px) {
          .col-md-9 {
              margin-left: 0; /* Remove sidebar margin */
              width: 100%; /* Full width */
          }

          .project-card {
              margin-top: 2rem; /* Adjust spacing */
          }

          .project-card-back p {
              font-size: 1.2rem; /* Reduce text size for better readability */
          }

          .btn-primary {
              font-size: 1rem; /* Reduce button size */
              padding: 8px 12px;
          }
      }

      @media (max-width: 576px) {
          .content-project {
              font-size: 1.5rem; /* Adjust heading size */
              text-align: center;
          }

          .project-card {
              margin-top: 1rem;
          }

          .project-card-inner {
              transition: transform 0.4s ease-in-out;
          }
      }
